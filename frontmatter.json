{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "articles",
      "path": "[[workspace]]/src/content/articles"
    }
  ],

"frontMatter.data.files": [
  {
    "id": "tags",
    "title": "Tags",
    "file": "[[workspace]]/src/data/tags.json",
    "fileType": "json",
    "labelField": "slug",
    "singleEntry": false,
    "schema": {
      "title": "Tags",
      "type": "object",
      "required": [
        "slug",
        "color"
      ],
      "properties": {
        "slug": {
          "type": "string",
          "title": "Slug"
        },
        "color": {
          "type": "string",
          "title": "Color"
        },
        "label_i18n": {
          "type": "object",
          "properties": {
            "de": {
              "type": "string"
            },
            "fr": {
              "type": "string"
            }
          }
        }
      }
    }
  }],


  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "article",
      "pageBundle": false,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "phase",
          "name": "phase",
          "type": "string"
        },
        {
          "title": "step",
          "name": "step",
          "type": "string"
        },
        {
          "title": "pubDate",
          "name": "pubDate",
          "type": "datetime"
        },
        {
          "title": "locale",
          "name": "locale",
          "type": "string"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "links",
          "name": "links",
          "type": "fields",
          "fields": []
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        }
      ]
    }
  ]
}
