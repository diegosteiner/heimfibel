---
import "../styles/global.scss";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <nav class="main-nav">
      <ul>
        <li>
          <a class="outlined" href="/goals">Ziele</a>
        </li>
        <li>
          <a class="outlined" href="/de-CH/articles/">Übersicht</a>
        </li>
        <li>
          <a class="outlined" href="/questions">Fragen</a>
        </li>
        <li>
          <a class="outlined" href="/about">Wir über uns</a>
        </li>
      </ul>
    </nav>
  </body>
</html>
